# DON'T REMOVE FROM test script.
CYAN='\033[0;36m'
BCYAN='\033[1;36m'
NC='\033[0m' # No Color
DIVIDER=$(printf %"$(tput cols)"s | tr " " "*")
DIVIDER+="\n"

function get_project_id() {
    local __resultvar=$1
    VALUE=$(gcloud config get-value project | xargs)
    eval $__resultvar="'$VALUE'"
}

function get_project_number() {
    local __resultvar=$1
    local PRO=$2
    VALUE=$(gcloud projects list --filter="project_id=$PRO" --format="value(PROJECT_NUMBER)" | xargs)
    eval $__resultvar="'$VALUE'"
}

# DISPLAY HELPERS
function section_open() {
    section_description=$1
    printf "$DIVIDER"
    printf "${CYAN}$section_description${NC} \n"
    printf "$DIVIDER"
}

function section_close() {
    printf "$DIVIDER"
    printf "${CYAN}$section_description ${BCYAN}- done${NC}\n"
    printf "\n\n"
}

function evalTest() {
    local command=$1
    local expected=$2

    local ERR=""
    got=$(eval $command 2>errFile)
    ERR=$(<errFile)

    if [ ${#ERR} -gt 0 ]; then
        if [ "$expected" = "EXPECTERROR" ]; then
            printf "Expected Error thrown \n"
            return
        fi

        printf "Halting - error: '$ERR'  \n"
        exit 1
    fi

    if [ "$got" != "$expected" ]; then
        printf "Halting: '$got' expected '$expected'  \n"
        exit 1
    fi

    printf "$expected is ok\n"
}
# END DON'T REMOVE FROM test script.

get_project_id PROJECT
get_project_number PROJECT_NUMBER $PROJECT
PROJECT_ID=$PROJECT
PREFIX="deploystack"

gcloud config set project ${PROJECT}

terraform init

terraform apply  \
   -var prefix=$PREFIX \
   -var project_id=$PROJECT_ID \
   -auto-approve

section_open "Test github.com/GoogleCloudPlatform/cloud-foundation-fabric//modules/project?ref=v20.0.0 exists"
    evalTest 'gcloud projects describe ${PROJECT_ID} --format="value(name)"' "${PROJECT_ID}"
section_close

section_open "Test github.com/GoogleCloudPlatform/cloud-foundation-fabric//modules/net-vpc-firewall?ref=v20.0.0 exists"
    evalTest 'gcloud compute firewall-rules describe ${PREFIX}-vpc-ingress-tag-http --format="value(name)"' "${PREFIX}-vpc-ingress-tag-http"
    evalTest 'gcloud compute firewall-rules describe ${PREFIX}-vpc-ingress-tag-https --format="value(name)"' "${PREFIX}-vpc-ingress-tag-https"
    evalTest 'gcloud compute firewall-rules describe ${PREFIX}-vpc-ingress-tag-ssh --format="value(name)"' "${PREFIX}-vpc-ingress-tag-ssh"
section_close

section_open "Test github.com/GoogleCloudPlatform/cloud-foundation-fabric//modules/net-cloudnat?ref=v20.0.0 exists"
    evalTest 'gcloud compute routers describe ${PREFIX}--nat-eu1-nat --region europe-west1 --format="value(name)"' "${PREFIX}-nat-eu1-nat"
    evalTest 'gcloud compute routers describe ${PREFIX}-nat-ue1-nat --region us-east1 --format="value(name)"' "${PREFIX}-nat-ue1-nat"
section_close

terraform destroy  \
   -var project_create=$PROJECT_CREATE \
   -var project_id=$PROJECT_ID \
   -var enforce_security_policy=$ENFORCE_SECURITY_POLICY \
   -var prefix=$PREFIX \
   -auto-approve

section_open "Test github.com/GoogleCloudPlatform/cloud-foundation-fabric//modules/project?ref=v20.0.0 does not exists"
    evalTest 'gcloud projects describe ${PROJECT_ID} --format="value(name)"' "EXPECTERROR"
section_close

section_open "Test github.com/GoogleCloudPlatform/cloud-foundation-fabric//modules/net-vpc-firewall?ref=v20.0.0 does not exists"
    evalTest 'gcloud compute firewall-rules describe ${PREFIX}-vpc-ingress-tag-http --zone $ZONE --format="value(name)"' "EXPECTERROR"
    evalTest 'gcloud compute firewall-rules describe ${PREFIX}-vpc-ingress-tag-https --zone $ZONE --format="value(name)"' "EXPECTERROR"
    evalTest 'gcloud compute firewall-rules describe ${PREFIX}-vpc-ingress-tag-ssh --zone $ZONE --format="value(name)"' "EXPECTERROR"
section_close

section_open "Test github.com/GoogleCloudPlatform/cloud-foundation-fabric//modules/net-cloudnat?ref=v20.0.0 does not exists"
    evalTest 'gcloud compute routers describe ${PREFIX}--nat-eu1-nat --region europe-west1 --format="value(name)"' "EXPECTERROR"
    evalTest 'gcloud compute routers describe ${PREFIX}-nat-ue1-nat --region us-east1 --format="value(name)"' "EXPECTERROR"
section_close

printf "$DIVIDER"
printf "CONGRATS!!!!!!! \n"
printf "You got the end the of your test with everything working. \n"
printf "$DIVIDER"
